<div class="row d-flex justify-content-aroun">
  <div class="col-lg-3">
    <h1> Assets </h1>
  </div>
  <div class="col-lg-3">
    <h1><button type="button" class="btn btn-warning px-3 mx-1"><%= link_to('Stories', user_stories_path) %></button></h1>
  </div>
</div>
<%= form_with(url: user_map_assets_path, method: :get) do |f| %>
<div class="row d-flex justify-content-around">
  <div class="col-lg-3">
    <%= f.text_field :place, placeholder: 'Place' %>
  </div>
  <div class="col-lg-3">
    <%= f.text_field :address, placeholder: 'Address' %>
  </div>
  <div class="col-lg-3">
    <span>Category:</span>
    <%= f.select :category, MapAsset::CATEGORY, include_blank: true %>
  </div>
</div>

<div class="row d-flex justify-content-around">
  <div class="col-lg-3">
     <%= f.text_field :author, placeholder: 'Author' %>
  </div>
  <div class="col-lg-3">
    <%= f.text_field :any_word, placeholder: 'Any Word' %>
  </div>
  <div class="col-lg-3">
    <%= f.text_field :start_at, as: :string, class: "datepickr" , placeholder: 'From' %>
  </div>
</div>
<div class="row d-flex justify-content-around">
  <div class="col-lg-3">
     <%= f.text_field :end_at, as: :string, class: "datepickr", placeholder: 'To' %>
  </div>
</div>

<div class="row">
  <%= f.submit "Search", class: 'btn btn-outline-secondary' %>
</div>
<% end %>
<%= link_to('New Asset', new_user_map_asset_path, class: 'btn btn-primary btn-lg mb-4', data: { bs_toggle: 'modal', bs_target: '#newUserModal', remote: true }) %>
<!-- Modal -->
<div class="modal fade" id="newUserModal" tabindex="-1" aria-labelledby="newUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newUserModalLabel"> Asset </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id=newUserForm>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editUserModalLabel"> Asset </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id=editUserForm>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="showUserModal" tabindex="-1" aria-labelledby="showUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="showUserModalLabel"> Asset </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div id=showUserForm>
      </div>
    </div>
  </div>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th class="ps-4">Place</th>
      <th class="ps-4">Address</th>
      <th class="ps-4">Category</th>
      <th class="ps-4">Review</th>
      <th class="ps-4">Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="userTable">
    <% @map_assets.each do |map_asset| %>
      <%= render('records', map_asset: map_asset)%>
    <% end %>
  </tbody>
</table>
