<center>
  <%= form_for(@map_asset, remote: true) do |form| %>
    <div class="modal-body" >
      <div class = "error_message"></div>
      <div class="row">
        <div class="col-lg-3">
          <span><i class="far fa-map"></i></span>
        </div>
        <div class="col-lg-9">
          <%= form.text_field :place, class: "form-control" %>  
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-lg-3">
          <span><i class="far fa-address-card"></i></span>
        </div>
        <div class="col-lg-9">
        <%= form.text_field :address, class: "form-control" %>  
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-lg-3">
          <span><i class="fas fa-indent"></i></span>
        </div>
        <div class="col-lg-9">
          <%= form.select :category, MapAsset::CATEGORY, class: "form-control" %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-5">
          <%= form.label :"I would like to share" %>
        </div>
        <div class="d-flex flex-row mb-3 mt-2 justify-content-evenly">
          <button class="review-button btn btn-outline-success good" type="button">Good</button>
          <button class="review-button btn btn-outline-danger bad" type="button">Bad</button>
          <button class="review-button btn btn-outline-info fix" type="button">Fix</button>
        </div>
        <%= form.hidden_field :review, class: "form-control display review" %>
      </div>
      <div class="row">
        <div class="col-lg-5">
          <%= form.label :description, class: "display" %>
        </div>
      </div>
      <div class="row mt-1">
        <%= form.rich_text_area :description, class: "form-control" %> 
      </div>
      <div class="row mt-2">
        <div class="col-lg-5">
          <%= form.label :images, class: "display" %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-lg-5">
          <%= form.file_field :images, multiple: true %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary close-model" data-bs-dismiss="modal">Close</button>
      <div class="row">
        <%= form.submit %>
      </div>
    </div> 
  <% end %>
</center>
